<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="container.kitty.ContainerKittyController">

    <!-- Top Toolbar -->
    <top>
        <ToolBar>
            <Button fx:id="startButton" text="Start"/>
            <Button fx:id="stopAllButton" text="Stop All"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#handleRefresh"/>
        </ToolBar>
    </top>

    <!-- Center -->
    <center>
        <SplitPane orientation="VERTICAL" dividerPositions="0.35">
            <!-- Composition/Version Table -->
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Select Composition / Version:"/>
                <TableView fx:id="compositionVersionTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="compositionColumn" text="Composition" prefWidth="200"/>
                        <TableColumn fx:id="versionColumn" text="Version" prefWidth="120"/>
                        <TableColumn fx:id="commentColumn" text="Comment" prefWidth="300"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Containers and Logs SplitPane -->
            <SplitPane orientation="VERTICAL" dividerPositions="0.4">
                <!-- Running Containers -->
                <VBox spacing="5" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label text="Running Containers:"/>
                    <TableView fx:id="containerTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                            <TableColumn fx:id="imageColumn" text="Image" prefWidth="250"/>
                            <TableColumn fx:id="memUsageColumn" text="Memory" prefWidth="100"/>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Logs -->
                <VBox spacing="5" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label text="Logs:"/>
                    <TextArea fx:id="logArea"
                              editable="false"
                              wrapText="true"
                              VBox.vgrow="ALWAYS"
                              style="-fx-control-inner-background: black;
                                     -fx-text-fill: lightgray;
                                     -fx-font-family: monospace;"/>
                </VBox>
            </SplitPane>
        </SplitPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
            <Label fx:id="statusLabel"
                   text="Status: Stopped"
                   style="-fx-font-weight: bold; -fx-text-fill: gray;"/>
        </HBox>
    </bottom>

</BorderPane>
